<div class='container'>
  <p id="notice">
    <%= notice %>
  </p>

  <h1>Contacts</h1>

  <table class='table'>
    <thead>
      <tr>
        <th>First name</th>
        <th>Last name</th>
        <th>Email</th>
        <th>Phone #</th>
        <th>Company Name</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @contacts.each do |contact| %>
        <tr id="row-for-contact-<%= contact.id %>">
          <td><%= contact.first_name %></td>
          <td><%= contact.last_name %></td>
          <td><%= contact.email_address %></td>
          <td><%= contact.phone_number %></td>
          <td><%= contact.company_name %></td>
          <td><%= link_to 'Show', contact %></td>
          <td><%= link_to 'Edit', edit_contact_path(contact) %></td>
          <td><%= link_to 'Destroy', contact, remote: true, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <div class='row'>
    <div class='col-md-12'>
      <%= form_tag csv_upload_contacts_path, multipart: true do %>
        <%= file_field_tag :file %> 
        <br>
        <br>
        <%= submit_tag "Import Contact CSV", class: 'btn btn-success' %>
      <% end %>
    </div>
  </div>
</div>

  <%= link_to 'New Contact', new_contact_path %>
<!-- container end -->
</div>
